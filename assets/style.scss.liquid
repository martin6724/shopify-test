{% assign header_font = settings.header_font %}
{% assign base_font = settings.base_font %}

{{ header_font | font_face }}
{{ base_font | font_face }}

{%- assign header_font_bold = header_font | font_modify: 'weight', '700' -%}
{%- assign base_font_light = base_font | font_modify: 'weight', '300' -%}

{{ header_font_bold | font_face }}
{{ base_font_light | font_face }}

$font-stack-header: {{ header_font.family }}, {{ header_font.fallback_families }};
$font-weight-header: {{ header_font_bold.weight | default: 700 }};
$font-stack-body: {{ base_font.family }}, {{ base_font.fallback_families }};
$font-weight-body: {{ base_font_light.weight | default: 300 }};

$font-size-header: {{ settings.header_base_size }}px;
$font-size-base: {{ settings.base_size }}px;

$font-size-header-mob: {{ settings.header_base_size }}px;
$font-size-base-mob: {{ settings.base_size }}px;

body {
  line-height: 1.5;
  font-family: $font-stack-body;
  font-size: $font-size-base;
  -webkit-font-smoothing: antialiased;
  margin:0;
}


h1, h2, h3, h4, h5, h6 {
font-family: $font-stack-header;
font-weight: $font-weight-header;
font-size: $font-size-header;
}

p {
  font-family: $font-stack-body;
  font-weight: $font-weight-body;
  color: #757575;
  font-size: $font-size-base;
}

a, a:focus, a:hover {
  text-decoration: none;
  outline: 0;
  color: #000;
}


/*============================================================================
     Hero
   ==============================================================================*/
.hero-container {
	position: relative;
	margin: 0;
	width: 100%;
	height: 35vw;
  min-height:500px;
	background-size: cover;
}

.hero {
  width: 779px;
  padding: 0 80px;
}

.hero-title {
	color: #fff;
  margin: 0;
}

.hero-detail {
	color: #fff;
  margin-top:0;
}

a.button-primary {
	-webkit-appearance: button;
	-moz-appearance: button;
	appearance: button;
	text-decoration: none;
	width: 213px;
	height: 57px;
  line-height: 57px;
	border-radius: 100px;
	background-color: #57ad68;
	color: #ffffff;
	margin: 0 auto;
	text-align: center;
  font-size: 20px;
  margin-top:8%;
  text-transform:uppercase;
	&:hover {
		background-color: #ffffff;
		color: #57ad68;
	}
}

.hero-copy-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  margin:0 auto;
}

.hero-copy-left {
  position: absolute;
  top: 50%;
  left: 0%;
  transform: translate(0%, -50%);
  text-align:left;
  max-width:583px;
}

.hero-copy-right {
  position: absolute;
  top: 50%;
  right: 0%;
  transform: translate(0%, -50%);
  text-align:left;
  max-width:583px;
}

@media screen and (max-width: 968px) {
  .hero {
    width: 70%;
  }
  .hero-title {
    margin-bottom: 10px;
    font-size:36px;
  }

  .hero-detail {
    font-size:18px;
    line-height:30px;
  }

  .hero-copy-left, .hero-copy-right {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    margin:0 auto;
  }
}

@media screen and (max-width: 768px) {
  .hero {
    width: 88%;
  }
  .hero-container {
    width:100vw;
    height:640px;
  }

}
